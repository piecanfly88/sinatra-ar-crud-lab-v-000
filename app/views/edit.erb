<form action='/articles/<%= @article.id %>' method='post'>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
    <ul>
      <li>
        <label for="title">Title</label>
        <input type="text" id="title" name="article[title]" value="<%= @article.title %>">
      </li>
      <li>
        <label for="content">Content</label>
        <textarea type="text" input="content" name="article[content]" value="<%= @article.content %>">
        </textarea>
      </li>
    </ul>
    <input type="submit">
</form>
